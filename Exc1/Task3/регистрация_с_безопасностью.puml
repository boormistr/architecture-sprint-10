
@startuml
!define C4PlantUML https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml
!include C4PlantUML

Person(receptionist, "Ресепшенист", "Регистрация пациентов")
Person(patient, "Пациент", "Предоставляет личную и медицинскую информацию")
System_Boundary(patient_system, "Система регистрации пациентов") {
    Component(patient_db, "База данных пациентов", "Хранение личной и медицинской информации (шифрование, RBAC, аудит)")
    Component(patient_files, "Сканированные документы", "Хранение сканов медицинских карт (шифрование)")
    Component(api_gateway, "API Gateway", "Проверка полномочий, аудит")
}

Rel(patient, receptionist, "Предоставляет данные", "Анкета")
Rel(receptionist, api_gateway, "Проверка полномочий", "HTTPS")
Rel(api_gateway, patient_db, "Регистрирует пациента", "Шифрование")
Rel(api_gateway, patient_files, "Загружает сканы", "Шифрование")

@enduml